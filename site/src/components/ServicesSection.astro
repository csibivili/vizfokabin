---
import { Bath, Dog, Trees } from "lucide-astro"
import SectionTitle from "./SectionTitle.astro"

const services = [
	{ icon: Bath, label: "kültéri jacuzzi" },
	{ icon: Dog, label: "kutyabarát" },
	{ icon: Trees, label: "privát kert" },
]
---

<SectionTitle text="Amiket a legjobban szerettek" />
<div class="flex flex-wrap justify-center gap-12 max-w-4xl mx-auto">
	{
		services.map(({ icon: Icon, label }) => (
			<div class="flex flex-col items-center gap-2">
				<Icon size={32} class="text-stone-700" />
				<span class="text-sm text-stone-600">{label}</span>
			</div>
		))
	}
</div>
